# include <stdio.h>
# include <time.h>

extern "C" int init(int d_lev);
extern "C" int connect_to_server( char server_addr[15],int port);
extern "C" int send_to_server(char message[24]);
extern "C" int receive_from_server(char message[24]);

void main (){
     // This sets up the RPi hardware and ensures
     // everything is working correctly
     init(1);
     while(true){
         //connects to server with the ip address
         connect_to_server("130.195.6.196", 22);

         //receives password from the connected server
         char password[24];
         receive_from_server(password); //this may be buggy!



         if(password != ""){
             //sends the password to the server to open the gate
             send_to_server(password + "please");
             break;
         }
         sleep(1,0);
     }

}
